<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffebee"
    android:orientation="vertical"
    tools:context="com.example.shivani.jsonvolleytest.MainActivity">
    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="50dp" 
        android:layout_margin="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

<Button
    android:id="@+id/btn"
    android:layout_width="150dp"
    android:layout_height="wrap_content" 
    android:text="Add Data"
    android:background="#f06292"
    android:textColor="#ffffff"
    android:textSize="20dp"
    android:typeface="serif"
    android:textAllCaps="false"
    android:layout_margin="10dp"
    android:onClick="addItems" />

    <Button
        android:id="@+id/btnGetVolley"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Get Volley Data"
        android:background="#f06292"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:typeface="serif"
        android:textAllCaps="false"
        android:layout_margin="10dp"
        android:onClick="addItems"/>
    </LinearLayout>
    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="6dp"
        android:divider="#ffebee"
        android:elevation="2dp"
        android:background="@drawable/listview_item_style"
        android:layout_margin="5dp"></ListView>

</LinearLayout>
